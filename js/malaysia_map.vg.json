{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "beige",
    "title": "GDP by Malaysian States in 2021",
    "width": 1000,
    "height": 400,
    "projection": 
    {
        "type": "equirectangular",
        "center": {"expr": "center_to"},
        "scale": {"expr": "zoom_level"}
    },
    "params": 
    [
      {
        "name": "center_to",
        "value": [107.9758, 4.2105],
        "bind":
        {
          "input": "select",
          "options": 
          [
            [107.9758, 4.2105],
            [101.6869, 3.1390],
            [112.3390, 5.3183],
            [100.3759, 5.3875]
          ],
          "labels": ["Malaysia", "Kuala Lumpur", "Labuan", "Penang"],
          "name": "Map Center: "
        }
      },
      {
        "name": "zoom_level",
        "value": 3000,
        "bind": {
        "input": "range",
        "min": 3000,
        "max": 60000,
        "step": 100,
        "name": "Zoom: "
        }
        }
    ],
    "layer": 
    [
      {
        "data": 
        {
          "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/refs/heads/master/public/data/malaysia-states.topojson",
          "format": 
          {
            "type": "topojson",
            "feature": "states"
          }
        },
        "transform": 
        [
            {
                "calculate": "'Data is not available for ' + datum.properties.Name",
                "as": "note"
            }
        ],
        "mark": 
        {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "black",
          "strokeWidth": 0.5
        },
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "data": 
        {
          "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/refs/heads/master/public/data/malaysia-states.topojson",
          "format": 
          {
            "type": "topojson",
            "feature": "states"
          }
        },
        "transform": 
        [
          {
            "lookup": "properties.Name",
            "from": 
            {
              "data": 
              {
                "url": "https://raw.githubusercontent.com/rizlanhkm/FIT3179_a2/refs/heads/main/csv_data/malaysia_states_gdp.csv",
                "format": {"type": "csv"}
              },
              "key": "State",
              "fields": ["GDP 2021"]
            }
          }
        ],
        "mark": {"type": "geoshape"},
        "encoding": 
        {
          "color": 
          {
            "field": "GDP 2021",
            "type": "quantitative",
            "scale": {"scheme": "reds"}
          },
          "tooltip": 
          [
            {"field": "properties.Name", "type": "nominal", "title": "State"},
            {"field": "GDP 2021", "type": "quantitative", "title": "GDP in 2021"}
          ]
        }
      },
      {
        "mark": 
        {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "fontSize": 12,
          "fontStyle": "italic"
        },
        "encoding": 
        {
          "text": {"value": ""}
        }
      }
    ]
  }